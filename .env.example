# Server Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres  # Change this to your actual PostgreSQL password
DB_NAME=api_db
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_DEBUG=false

# Authentication
JWT_SECRET=your-secure-jwt-secret-key
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d
SALT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_REQUESTS=true

# Swagger
SWAGGER_ENABLED=true
SWAGGER_ROUTE=/api-docs

# Cache
CACHE_TTL=3600
CACHE_ENABLED=false 